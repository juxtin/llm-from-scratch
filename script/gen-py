#!/usr/bin/env bash
set -euo pipefail

# ensure output dir exists
mkdir -p src

for nb in notebooks/*.ipynb; do
  name=$(basename "$nb" .ipynb)
  out="src/${name}.py"

  echo "Converting $nb â†’ $out"
  rm -f "$out"

  # 1. convert to script in src/ (nbconvert will add .py for us)
  jupyter nbconvert --to script \
    --output "${name}" \
    --output-dir src \
    "$nb"


  out="src/${name}.py"
  header="# Code generated from $nb by script/gen-py. DO NOT EDIT."
  
  # if the first line is a shebang, preserve it, then insert header
  first=$(head -n1 "$out")
  if [[ $first == "#!"* ]]; then
    {
      # shebang
      echo "$first"
      # gen-header + blank line
      echo "$header"
      echo
      # rest of file (skip original shebang)
      tail -n +2 "$out"
    } > "${out}.fixed"
  else
    {
      echo "$header"
      echo
      cat "$out"
    } > "${out}.fixed"
  fi
  mv "${out}.fixed" "$out"
done

echo "Done."
